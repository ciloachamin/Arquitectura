@model double?
@{
    ViewBag.Title = "Convertir Longitud";
}

<h2>Convertir Longitud</h2>

<form method="post" action="/ConversorLongitud/Convertir">
    <label for="valor">Valor:</label>
    <input type="number" step="0.01" id="valor" name="valor" required />

    <label for="unidadOrigen">Unidad Origen:</label>
    <select id="unidadOrigen" name="unidadOrigen">
        <option value="metro">Metro</option>
        <option value="kilometro">Kilómetro</option>
        <option value="centimetro">Centímetro</option>
        <option value="milla">Milla</option>
    </select>

    <label for="unidadDestino">Unidad Destino:</label>
    <select id="unidadDestino" name="unidadDestino">
        <option value="metro">Metro</option>
        <option value="kilometro">Kilómetro</option>
        <option value="centimetro">Centímetro</option>
        <option value="milla">Milla</option>
    </select>

    <button type="submit">Convertir</button>
</form>

@if (ViewBag.Resultado != null)
{
    <h3>Resultado: @ViewBag.Resultado</h3>
}
